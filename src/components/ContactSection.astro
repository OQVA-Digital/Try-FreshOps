---
    import '../styles/forms.css'
---

<section class="contact default_bg" id="contact">
    <div class="base_width reveal">
        <form name="contact" method="POST" data-netlify="true">
            <h3 class="title">Start with freshOps</h3>

            <div class="flex">
                <p>
                    <label>First name: <input type="text" name="name" required/></label>
                </p>

                <p>
                    <label>Last name: <input type="text" name="name" required/></label>
                </p>
            </div>

            <p>
                <label>Email: <input type="email" name="email" required/></label>
            </p>

            <p>
                <label>Message: <textarea name="message" required></textarea></label>
            </p>

            <p>
                <button type="submit" aria-label="Submit contact form">Request a quote</button>
						
                <noscript>You need to enable JavaScript on your browser to submit emails.</noscript>
            </p>
            </form>
    </div>
    
    <div class="overflow_ctnr">
        <div class="scale_ctnr">
            <div class="gradient_cone"></div>
        </div>
    </div>

    <script>
        import "../scripts/form.js";
    </script>
</section>